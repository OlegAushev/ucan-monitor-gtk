<?xml version="1.0" encoding="UTF-8"?>
<interface>
	<requires lib="gtk" version="4.0" />
	<template class="CanMonitorWindowCanBusPrefs" parent="AdwPreferencesWindow">
		<property name="title">CAN Bus Preferences</property>
		<property name="width-request">300</property>
		<property name="height-request">600</property>
		<property name="default-width">300</property>
		<property name="default-height">600</property>
		<property name="search-enabled">False</property>	
		<child>
			<object class="AdwPreferencesPage">
				<property name="icon-name">link-symbolic</property>
				<child>
					<object class="AdwPreferencesGroup">
						<property name="title">SocketCAN</property>
						<!-- INTERFACE COMBOBOX -->
						<child>
							<object class="AdwComboRow" id="comborowCanInterface">
								<property name="title">Interface</property>
								<property name="model">
									<object class="GtkStringList" id="listCanInterface">
										<items>
											<item>can0</item>
											<item>can1</item>
										</items>
									</object>
								</property>
							</object>
						</child>
						<!-- BITRATE COMBOBOX -->
						<child>
							<object class="AdwComboRow" id="comborowCanBitrate">
								<property name="title">Bitrate</property>
								<property name="model">
									<object class="GtkStringList" id="listCanBitrate">
										<items>
											<item>125000</item>
											<item>250000</item>
											<item>500000</item>
											<item>1000000</item>
										</items>
									</object>
								</property>
							</object>
						</child>
					</object>
				</child>

				<child>
					<object class="AdwPreferencesGroup">
						<property name="title">CANopen</property>
						<!-- ENABLE TPDO SWITCH -->
						<child>
							<object class="AdwActionRow">
								<property name="title">Enable TPDOs</property>
								<property name="activatable_widget">switchTpdo</property>
								<child>
									<object class="GtkSwitch" id="switchTpdo">
										<property name="valign">center</property>
									</object>
								</child>
							</object>
						</child>
						<!-- ENABLE WATCH SWITCH -->
						<child>
							<object class="AdwActionRow">
								<property name="title">Enable Watch</property>
								<property name="activatable_widget">switchWatch</property>
								<child>
									<object class="GtkSwitch" id="switchWatch">
										<property name="valign">center</property>
									</object>
								</child>
							</object>
						</child>
						<!-- WATCH PERIOD COMBOBOX -->
						<child>
							<object class="AdwComboRow" id="comborowWatchPeriod">
								<property name="title">Watch Period, ms</property>
								<property name="model">
									<object class="GtkStringList" id="listWatchPeriod">
										<items>
											<item>1</item>
											<item>2</item>
											<item>5</item>
											<item>10</item>
											<item>20</item>
											<item>50</item>
											<item>100</item>
										</items>
									</object>
								</property>
							</object>
						</child>
					</object>
				</child>

				<child>
					<object class="AdwPreferencesGroup">
						<child>
							<object class="GtkBox">
								<property name="orientation">vertical</property>
								<property name="spacing">10</property>
								<!-- CONNECT BUTTON -->
								<child>
									<object class="GtkButton" id="buttonConnect">
										<property name="label">Connect</property>
										<style>
											<class name="suggested-action"/>
										</style>
									</object>
								</child>						
								<!-- DISCONNECT BUTTON -->
								<child>
									<object class="GtkButton" id="buttonDisconnect">
										<property name="label">Disconnect</property>
										<style>
											<class name="destructive-action"/>
										</style>
									</object>
								</child>
							</object>
						</child>
					</object>
				</child>
			</object>>
		</child>
	</template>
</interface>
