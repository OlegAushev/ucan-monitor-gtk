<?xml version="1.0" encoding="UTF-8"?>
<interface>
	<requires lib="gtk" version="4.0" />
	<template class="CanMonitorWindowCanBusPrefs" parent="AdwPreferencesWindow">
		<property name="title">CAN Bus Preferences</property>
		<property name="width-request">300</property>
		<property name="height-request">350</property>
		<property name="default-width">300</property>
		<property name="default-height">350</property>
		<property name="search-enabled">False</property>	
		<child>
			<object class="AdwPreferencesPage">
				<child>
					<object class="AdwPreferencesGroup">
						<!-- INTERFACE COMBOBOX -->
						<child>
							<object class="AdwComboRow" id="comborow_canInterface">
								<property name="title">Interface</property>
								<property name="model">
									<object class="GtkStringList">
										<items>
											<item>can0</item>
											<item>can1</item>
										</items>
									</object>
								</property>
							</object>
						</child>
						<!-- BITRATE COMBOBOX -->
						<child>
							<object class="AdwComboRow" id="comborow_canBitrate">
								<property name="title">Bitrate</property>
								<property name="model">
									<object class="GtkStringList">
										<items>
											<item>125000</item>
											<item>250000</item>
											<item>500000</item>
											<item>1000000</item>
										</items>
									</object>
								</property>
							</object>
						</child>
					</object>
				</child>
				<child>
					<object class="AdwPreferencesGroup">
						<child>
							<object class="GtkBox">
								<property name="orientation">vertical</property>
								<property name="spacing">10</property>
								<!-- CONNECT BUTTON -->
								<child>
									<object class="GtkButton" id="buttonConnect">
										<property name="label">Connect</property>
										<style>
											<class name="suggested-action"/>
										</style>
									</object>
								</child>						
								<!-- DISCONNECT BUTTON -->
								<child>
									<object class="GtkButton" id="buttonDisconnect">
										<property name="label">Disconnect</property>
										<style>
											<class name="destructive-action"/>
										</style>
									</object>
								</child>
							</object>
						</child>
					</object>
				</child>
			</object>>
		</child>
	</template>
</interface>
