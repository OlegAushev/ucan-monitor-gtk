<?xml version="1.0" encoding="UTF-8"?>
<interface>
	<requires lib="gtk" version="4.0" />
	<template class="CanMonitorWindowCanBusPreferences" parent="AdwPreferencesWindow">
		<property name="title">CAN Bus Preferences</property>
		<property name="width-request">320</property>
		<property name="height-request">640</property>
		<property name="default-width">320</property>
		<property name="default-height">640</property>
		<property name="search-enabled">False</property>	
		<child>
			<object class="AdwPreferencesPage">
				<property name="icon-name">link-symbolic</property>
				<child>
					<object class="AdwPreferencesGroup">
						<property name="title">SocketCAN</property>
						<!-- INTERFACE COMBOBOX -->
						<child>
							<object class="AdwComboRow" id="comborowCanInterface">
								<property name="title">Interface</property>
								<property name="model">
									<object class="GtkStringList" id="listCanInterface">
										<items>
											<item>can0</item>
											<item>can1</item>
										</items>
									</object>
								</property>
							</object>
						</child>
						<!-- BITRATE COMBOBOX -->
						<child>
							<object class="AdwComboRow" id="comborowCanBitrate">
								<property name="title">Bitrate</property>
								<property name="model">
									<object class="GtkStringList" id="listCanBitrate">
										<items>
											<item>125000</item>
											<item>250000</item>
											<item>500000</item>
											<item>1000000</item>
										</items>
									</object>
								</property>
							</object>
						</child>

						<child>
							<object class="AdwActionRow">
								<!-- DISCONNECT BUTTON -->
								<child type="prefix">
									<object class="GtkButton" id="buttonDisconnect">
										<property name="label">Disconnect</property>
										<property name="halign">center</property>
										<property name="valign">center</property>
										<property name="width-request">140</property>
										<style>
											<class name="destructive-action"/>
										</style>
									</object>
								</child>
								<!-- CONNECT BUTTON -->
								<child type="suffix">
									<object class="GtkButton" id="buttonConnect">
										<property name="label">Connect</property>
										<property name="halign">center</property>
										<property name="valign">center</property>
										<property name="width-request">140</property>
										<style>
											<class name="suggested-action"/>
										</style>
									</object>					
								</child>
							</object>
						</child>

					</object>
				</child>

				<child>
					<object class="AdwPreferencesGroup">
						<property name="title">CANopen</property>
						<!-- CLIENT ID -->
						<child>
							<object class="AdwActionRow">
								<property name="title">Client ID</property>
								<child>
									<object class="GtkSpinButton" id="spinbuttonClientId">
										<property name="halign">start</property>
										<property name="valign">center</property>
										<property name="adjustment">
											<object class="GtkAdjustment" id="adjustmentClientId">
												<property name="lower">1</property>
												<property name="upper">127</property>
												<property name="step-increment">1</property>
											</object>
										</property>
										<property name="wrap">true</property>
										<property name="climb-rate">1</property>
										<property name="numeric">true</property>
									</object>
								</child>
							</object>
						</child>
						<!-- SERVER ID -->
						<child>
							<object class="AdwActionRow">
								<property name="title">Server ID</property>
								<child>
									<object class="GtkSpinButton" id="spinbuttonServerId">
										<property name="halign">start</property>
										<property name="valign">center</property>
										<property name="adjustment">
											<object class="GtkAdjustment" id="adjustmentServerId">
												<property name="lower">1</property>
												<property name="upper">127</property>
												<property name="value">1</property>
												<property name="step-increment">1</property>
											</object>
										</property>
										<property name="wrap">true</property>
										<property name="climb-rate">1</property>
										<property name="numeric">true</property>
									</object>
								</child>
							</object>
						</child>
						<!-- TPDO -->
						<child>
							<object class="AdwActionRow">
								<property name="title">Enable client TPDO-messages</property>
								<property name="activatable_widget">switchTpdo</property>
								<child>
									<object class="GtkSwitch" id="switchTpdo">
										<property name="valign">center</property>
									</object>
								</child>
							</object>
						</child>
						<!-- WATCH -->
						<child>
							<object class="AdwExpanderRow" id="expanderrowWatch">
								<property name="title">Server watch messages</property>
								<property name="show-enable-switch">true</property>
								<child>
									<object class="AdwActionRow">
										<property name="title">Period, ms</property>
										<child>
											<object class="GtkSpinButton" id="spinbuttonWatchPeriod">
												<property name="halign">start</property>
												<property name="valign">center</property>
												<property name="adjustment">
													<object class="GtkAdjustment" id="adjustmentWatchPeriod">
														<property name="lower">1</property>
														<property name="upper">1000</property>
														<property name="value">1</property>
														<property name="step-increment">1</property>
													</object>
												</property>
												<property name="wrap">true</property>
												<property name="climb-rate">1</property>
												<property name="numeric">true</property>
											</object>
										</child>
									</object>
								</child>
							</object>
						</child>
					</object>
				</child>
			</object>>
		</child>
	</template>
</interface>
