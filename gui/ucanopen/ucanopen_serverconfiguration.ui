<?xml version="1.0" encoding="UTF-8"?>
<interface>
	<requires lib="gtk" version="4.0" />
	<template class="UcanopenServerConfiguration" parent="AdwBin">
		<child>
			<object class="AdwToastOverlay" id="toast_overlay">
				<property name="child">
					<object class="AdwPreferencesPage">
						<child>
							<object class="AdwPreferencesGroup">
								<property name="title">About</property>
								<property name="header-suffix">
									<object class="GtkButton" id="button_refresh_about">
									  	<property name="child">
											<object class="AdwButtonContent">
										  		<property name="icon-name">view-refresh-symbolic</property>
										  		<property name="label" translatable="yes">Refresh</property>
											</object>
									  	</property>
									  	<style>
											<class name="flat"/>
										</style>
									</object>
								</property>
			  
								<child>
									<object class="AdwActionRow">
										<child type="prefix">
											<object class="GtkLabel">
												<property name="label">Device Name</property>
											</object>
										</child>

										<child type="suffix">
											<object class="GtkLabel" id="label_device_name">
												<property name="label">n/a</property>
											</object>
										</child>
									</object>
								</child>

								<child>
									<object class="AdwActionRow">
										<child type="prefix">
											<object class="GtkLabel">
												<property name="label">Hardware Version</property>
											</object>
										</child>

										<child type="suffix">
											<object class="GtkLabel" id="label_hardware_version">
												<property name="label">n/a</property>
											</object>
										</child>
									</object>
								</child>

								<child>
									<object class="AdwActionRow">
										<child type="prefix">
											<object class="GtkLabel">
												<property name="label">Firmware Version</property>
											</object>
										</child>

										<child type="suffix">
											<object class="GtkLabel" id="label_firmware_version">
												<property name="label">n/a</property>
											</object>
										</child>
									</object>
								</child>

								<child>
									<object class="AdwActionRow">
										<child type="prefix">
											<object class="GtkLabel">
												<property name="label">Device S/N</property>
											</object>
										</child>

										<child type="suffix">
											<object class="GtkLabel" id="label_serial_number">
												<property name="label">n/a</property>
											</object>
										</child>
									</object>
								</child>
							</object>
						</child>

						<child>
							<object class="AdwPreferencesGroup">
								<property name="title">Configuration</property>
								
								<child>
									<object class="AdwComboRow" id="comborow_category">
										<property name="title">Category</property>
										<property name="width-request">400</property>
									</object>
								</child>

								<child>
									<object class="AdwComboRow" id="comborow_entry">
										<property name="title">Entry</property>
										<property name="width-request">400</property>
										<child type="suffix">
											<object class="GtkButton" id="button_read">
												<property name="label">Read</property>
												<property name="halign">center</property>
												<property name="valign">center</property>
											</object>
										</child>
									</object>
								</child>

								<child>
									<object class="AdwEntryRow" id="entryrow_value">
										<property name="title">Value</property>
										<property name="input-purpose">number</property>

										<child type="suffix">
											<object class="GtkButton" id="button_write">
												<property name="label">Write</property>
												<property name="halign">center</property>
												<property name="valign">center</property>
											</object>
										</child>
									</object>
								</child>

								<child>
									<object class="AdwActionRow">
										<child type="prefix">
											<object class="GtkButton" id="button_restore">
												<property name="label">Restore</property>
												<property name="halign">center</property>
												<property name="valign">center</property>
												<property name="width-request">200</property>
												<style>
													<class name="destructive-action"/>
												</style>
											</object>
										</child>

										<child type="suffix">
											<object class="GtkButton" id="button_apply">
												<property name="label">Apply</property>
												<property name="halign">center</property>
												<property name="valign">center</property>
												<property name="width-request">200</property>
												<style>
													<class name="suggested-action"/>
												</style>
											</object>
										</child>
									</object>
								</child>

							</object>
						</child>
					</object>

				</property>
			</object>

		</child>
	</template>
</interface>