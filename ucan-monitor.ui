<interface>
  <!-- interface-name ucan-monitor.ui -->
  <requires lib="gtk" version="4.6"/>
  <requires lib="libadwaita" version="1.1"/>
  <template class="CanMonitorWindow" parent="GtkApplicationWindow">
    <property name="default-height">300</property>
    <property name="default-width">1000</property>
    <child type="titlebar">
      <object class="GtkHeaderBar" id="headerbar">
        <child type="start">
          <object class="GtkToggleButton">
            <property name="icon-name">sidebar-show-symbolic</property>
          </object>
        </child>
        <child type="end">
          <object class="GtkMenuButton">
            <property name="halign">baseline</property>
            <property name="icon-name">open-menu-symbolic</property>
          </object>
        </child>
        <child type="title">
          <object class="AdwViewSwitcherTitle" id="viewswitcher_main">
            <property name="stack">viewstack_main</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="AdwFlap" id="flap_main">
        <property name="content">viewstack_main</property>
        <property name="flap">label_flap</property>
        <property name="separator">flap_main_separator</property>
        <child>
          <object class="GtkLabel" id="label_flap">
            <property name="label">flap</property>
          </object>
        </child>
        <child>
          <object class="GtkSeparator" id="flap_main_separator"/>
        </child>
        <child>
          <object class="AdwViewStack" id="viewstack_main">
            <child>
              <object class="AdwViewStackPage" id="viewstack_main_page1">
                <property name="child">
                  <object class="GtkLabel">
                    <property name="label">This is page 1</property>
                  </object>
                </property>
                <property name="icon-name">joystick</property>
                <property name="title">Control</property>
              </object>
            </child>
            <child>
              <object class="AdwViewStackPage" id="viewstack_main_page2">
                <property name="child">
                  <object class="GtkLabel">
                    <property name="label">This is page 2</property>
                  </object>
                </property>
                <property name="icon-name">utilities-tweak-tool-symbolic</property>
                <property name="title">Setup</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
